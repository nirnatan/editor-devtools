{
  "name": "SantaDevTools",
  "version": "1.0.58",
  "manifest_version": 2,
  "description": "Santa Devloper Tools",
  "icons": {
    "16": "assets/images/icon-16.png",
    "128": "assets/images/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "assets/images/icon-19.png",
      "38": "assets/images/icon-38.png"
    },
    "default_title": "Santa DevTools",
    "default_popup": "popup.html"
  },
  "commands": {
    "open-blank-editor": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Open a new blank template editor"
    },
    "open-editor": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open the editor of the current viewer"
    },
    "debug-ssr": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Start Bolt SSR debug of the current tab"
    },
    "debug-client": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Start Bolt Client debug of the current tab"
    }
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://users.wix.com/wix-users/login/form"
      ],
      "js": [
        "scripts/logInGoogle.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/contentScripts.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://github.com/wix-private/santa/pull/*",
        "https://github.com/wix-private/santa-core/pull/*",
        "https://github.com/wix-private/santa-editor/pull/*",
        "https://github.com/wix-private/bolt/pull/*"
      ],
      "js": [
        "scripts/githubHelper.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://pullrequest-tc.dev.wixpress.com/*",
        "http://pullrequest-tc.dev.wixpress.com/*"
      ],
      "js": [
        "scripts/pullrequest-tc.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://pullrequest-tc.dev.wixpress.com/login.html",
        "http://pullrequest-tc.dev.wixpress.com/login.html",
        "https://tc.dev.wixpress.com/login.html",
        "http://tc.dev.wixpress.com/login.html"
      ],
      "js": [
        "scripts/teamcityLoginHelper.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://jira.wixpress.com/*"
      ],
      "js": [
        "scripts/jiraHelper.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://editor.wix.com/html/editor/web/renderer/*",
        "https://editor.wix.com/html/editor/web/renderer/*"
      ],
      "js": [
        "scripts/editorScriptInjector.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://editor.wix.com/html/editor/web/renderer/*",
        "https://editor.wix.com/html/editor/web/renderer/*"
      ],
      "js": [
        "scripts/frameDataCheckerInjector.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "http://editor.wix.com/html/editor/web/renderer/*",
        "https://editor.wix.com/html/editor/web/renderer/*"
      ],
      "css": [
        "boltIndicator.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "contentActions.js",
    "editorHelper.js",
    "frameDataChecker.js"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "options_page": "options.html",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs"
  ]
}
